<div class="container">
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card text-center bg-light">
                    <img src="~/imgs/Produto/@item.urlImagem" alt="@item.Nome" class="card-img" style="width:auto; height:auto;;" />
                    <div class="card-body">
                        <h5 class="card-title fw-bold">
                            @Html.DisplayFor(modelItem => item.Nome)
                        </h5>
                        <p class="card-body truncar-3l fw-bold border-top border-bottom text-nowrap ">
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </p>
                    </div>
                    <div class="card-text fw-bold">
                        <p>R$ @Html.DisplayFor(modelItem => item.Preco)</p>
                    </div>
                    @if (ViewBag.id != 1)
                    {
                        <button type="button" class="btn-outline-danger">
                            <img src="~/imgs/icons/cart.svg"/>
                        </button>
                    }
                </div>
                @if (ViewBag.id == 1){
                <button>@Html.ActionLink("Editar", "Edit", new {id=item.Id}, new {style = "text-decoration: none"})</button>
                <button>@Html.ActionLink("Excluir", "Delete", new {id=item.Id},new {style = "text-decoration: none"})</button>
                }
            </div>
        }
    </div>
</div>



