@model IEnumerable<web_app.Models.Produto>
@using Newtonsoft.Json
@{
    ViewData["Title"] = "Zequinha's Lanches";
    if (Context.Session.GetString("login") != null)
    {
        var valorSessao = Context.Session.GetString("login");
        var login = JsonConvert.DeserializeObject<Login>(valorSessao);
        int id = login.Id;
        ViewBag.id = id;
    }
}

<h1>Zequinha's Lanches</h1>

@if (ViewBag.id == 1)
{
    <p>
    <a asp-action="Create"><button>Novo Produto</button></a>
</p>
}
