@model web_app.Models.Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/web_app.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="cadastro">
    <h4>Login</h4>
    <hr />
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Usuario" class="control-label">Email</label>
                    <input asp-for="Usuario" class="form-control" required style="width:300px;" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid username.
                    </div>
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha" class="control-label" ></label>
                    <input asp-for="Senha" class="form-control" required style="width:300px;" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid password.
                    </div>
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <input type="submit" value="Criar " class="btn btn-primary" />
                </div>
            </form>
    <div class="mt-3">
        <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Voltar ao login</a>
    </div>
        </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
