@model IEnumerable<web_app.Models.Postagem>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container">
    <div class="container-fluid">
@foreach (var item in Model) 
{
            <div class="card text-center bg-light mb-5">
                <div class="row">
                    <div class="col">
                        <h5 class="card-title fw-bold">
                            @Html.DisplayFor(modelItem => item.Usuario)
                        </h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <img src="~/imgs/Postagem/@item.UrlImagem" alt="Imagem" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card-text fw-bold">
                            @Html.DisplayFor(modelItem => item.Curtidas)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <p class="card-body truncar-3l fw-bold border-top border-bottom">
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </p>
                    </div>
                </div>
            </div>
}
    </div>
</div>