@model web_app.Models.Postagem

<h4>Postagem</h4>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" style="resize: none;"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlImagem" class="control-label"> </label>
                <input asp-for="UrlImagem" class="form-control" type="file" />
                <span asp-validation-for="UrlImagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Postar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
